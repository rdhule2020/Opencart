pipeline {
    agent any

    tools {
        maven 'MyMaven'
        jdk 'MyJava'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/rdhule2020/Opencart/'
            }
        }

        stage('Build') {
            steps {
                sh 'cd Opencart && mvn clean install -DskipTests'
            }
        }

        stage('Run Automation Test') {
            steps {
                sh 'cd Opencart && mvn test'
            }
        }

        stage('Publish Test Report') {
            steps {
                junit 'Opencart/target/surefire-reports/*.xml'
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'Opencart/target/surefire-reports/*.xml', allowEmptyArchive: true
        }
    }
}
